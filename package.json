{
    "name": "huffman-javascript",
    "description": "huffman-javascript monorepo",
    "version": "0.0.0",
    "private": true,
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "scripts": {
        "dev": "npm -w packages/core run build && npm -w website run dev",
        "build": "npm -w packages/core run build",
        "lint": "eslint . --ext .js,.ts, --color"
    },
    "license": "MIT",
    "devDependencies": {
        "@rollup/plugin-typescript": "^9.0.2",
        "@types/node": "^16.10.2",
        "@typescript-eslint/eslint-plugin": "^4.32.0",
        "@typescript-eslint/parser": "^4.32.0",
        "eslint": "^7.32.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "^6.6.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.26.1",
        "husky": "^7.0.2",
        "jest": "^29.2.2",
        "prettier": "^2.4.1",
        "release-it": "^14.11.6",
        "rollup": "^3.2.3",
        "rollup-plugin-typescript2": "^0.34.1",
        "ts-jest": "^29.0.3",
        "turbo": "^1.6.1",
        "typescript": "^4.8.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.(js|jsx|ts|tsx)": [
            "eslint --fix"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/kelreel/huffman-javascript"
    },
    "workspaces": [
        "packages/*",
        "website"
    ],
    "dependencies": {
        "@types/jest": "^29.2.0"
    }
}
