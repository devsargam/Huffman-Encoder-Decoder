{
  "name": "huffman-javascript",
  "description": "Set of utilities for the huffman algorithm",
  "keywords": [
    "Huffman",
    "Huffman algorithm",
    "Data compression"
  ],
  "version": "0.1.2",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "lint": "eslint --ext .js,.ts, src --color",
    "format": "prettier --write \"src/**/*.{js,ts,tsx,scss,css,json}\" --fix",
    "release": "release-it"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|jsx|ts|tsx)": [
      "npm run format"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kelreel/huffman-javascript"
  }
}
