{
    "compilerOptions": {
        "declaration": false,
        "lib": ["dom", "es2020"],
        "target": "es2020",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "noEmit": true,
        "resolveJsonModule": true,
        "strict": true,
        "noUnusedLocals": true,
        "types": ["node", "jest"],
        "allowJs": true,
        "esModuleInterop": true,
        "jsx": "react-jsx"
    },
    "include": ["packages/**/*", "website/**/*"],
    "exclude": ["node_modules"],
    "esModuleInterop": true
}
